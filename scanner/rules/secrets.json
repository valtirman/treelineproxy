{
  "version": "2025-08-11",
  "rules": [
    { "id":"sec.aws.access", "pattern":"AKIA[0-9A-Z]{16}", "severity":"high", "message":"AWS access key fingerprint.", "fix":"Rotate & use IAM roles." },
    { "id":"sec.aws.secret", "pattern":"(?i)aws(.{0,10})?(secret|sk|access)?(.{0,3})?(key|token)\\s*[:=]\\s*['\\\"][A-Za-z0-9/+=]{20,}['\\\"]", "severity":"high", "message":"AWS secret-like key string.", "fix":"Purge & rotate immediately." },
    { "id":"sec.generic.api", "pattern":"(?i)(api|bearer|secret|token)\\s*[:=]\\s*['\\\"][A-Za-z0-9_\\-\\./]{24,}['\\\"]", "severity":"high", "message":"Generic API token.", "fix":"Treat as compromised; rotate." }
  ]
}
